<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AbsenceManagementApp.Views.AbsencesPage"
             Title="{Binding Title}">
    <RefreshView Command="{Binding RefreshCommand}"
                 IsRefreshing="{Binding IsBusy}">
        <CollectionView ItemsSource="{Binding Absences}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedAbsence}">
            <CollectionView.EmptyView>
                <StackLayout VerticalOptions="Center"
                             HorizontalOptions="Center">
                    <Label Text="Aucune absence Ã  afficher"
                           FontSize="18"
                           HorizontalOptions="Center" />
                </StackLayout>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10"
                           Padding="15"
                           BorderColor="LightGray"
                           CornerRadius="10">
                        <Grid RowDefinitions="Auto,Auto,Auto"
                              ColumnDefinitions="*,Auto">
                            
                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   Text="{Binding StudentName}"
                                   FontSize="18"
                                   FontAttributes="Bold" />
                            
                            <Label Grid.Row="0"
                                   Grid.Column="1"
                                   Text="{Binding AbsenceDate, StringFormat='{0:dd/MM/yyyy}'}"
                                   FontSize="14"
                                   TextColor="Gray" />
                            
                            <Label Grid.Row="1"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   Text="{Binding Reason, StringFormat='Motif: {0}'}"
                                   FontSize="14"
                                   Margin="0,5,0,0" />
                            
                            <Label Grid.Row="2"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   Text="{Binding Status, StringFormat='Statut: {0}'}"
                                   FontSize="14"
                                   TextColor="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                   Margin="0,5,0,0" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>

